<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-warning text-white text-center">
      <h2><i class="bi bi-pencil-square"></i> Editar Tarefa</h2>
    </div>
    <div class="card-body">
      <% if @task.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@task.errors.count, "erro") %> impediram a atualização da tarefa:</h4>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><i class="bi bi-exclamation-triangle-fill"></i> <%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'form' %>
    </div>
    <div class="card-footer text-center">
      <a href="<%= tasks_path %>" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Voltar
      </a>
    </div>
  </div>
</div>
